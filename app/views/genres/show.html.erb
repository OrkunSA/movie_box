<% content_for :header do %>
  <h1><%= @genre.name %></h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to Genres", genres_path, :method => "get", class: "btn btn-info btn-block" %>
    </li>
    <li class="nav-item">
      <%= button_to "Back to Movies", movies_path, :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <p>Movies:</p>
  <% alphebetize(@movies).each do |movie| %>
    <p><%= link_to movie.title, movie_path(movie) %></p>
  <% end %>
<% end %>