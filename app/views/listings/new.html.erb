<% content_for :header do %>
  <h1>Add <%= @listing.movie.title %> to Your Moviebox</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to #{@listing.movie.title}", movie_path(@listing.movie), :method => "get", class: "btn btn-dark btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <%= render partial: "form", locals: {listing: @listing, movie: @listing.movie} %>
<% end %>