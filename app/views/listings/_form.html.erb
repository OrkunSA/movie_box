<% if listing.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
    <% listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [movie, listing] do |f| %>
  <strong><%= f.label :moviebox %></strong>
  <%= f.collection_select :moviebox_id, alphebetize(current_user.movieboxes), :id, :name %><br>
  <strong><%= f.label :user_status %></strong>
  <%= f.text_field :user_status, class:"form-control" %><br>
  <%= f.check_box :favorite %> <strong>Favorite?</strong> <br>
  <%= f.hidden_field :user_id, value: current_user.id %><br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>